<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_34sdp">

    <LinearLayout
        android:layout_width="@dimen/_540sdp"
        android:layout_height="@dimen/_240sdp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/item_img"
            android:layout_width="@dimen/_460sdp"
            android:layout_height="match_parent"
            android:background="@mipmap/voucher_daijing">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_82sdp"
                android:text="满100减50"
                android:textColor="@color/white"
                android:textSize="@dimen/_44ssp" />

            <TextView
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_135sdp"
                android:text="团购券"
                android:textColor="@color/white"
                android:textSize="@dimen/_30ssp" />

        </FrameLayout>

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFDFDC"
            android:gravity="center"
            android:text="删\n除"
            android:textColor="#FF2D4B"
            android:textSize="@dimen/_30ssp" />

    </LinearLayout>

</FrameLayout>