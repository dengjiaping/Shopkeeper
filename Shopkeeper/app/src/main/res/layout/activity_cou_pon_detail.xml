<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context="com.admin.shopkeeper.ui.activity.activityOfBoss.returnanalysis.ReturnAnalysisActivity">

    <include layout="@layout/boss_common_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_50sdp">

                <View
                    style="@style/LineHorStyle"
                    android:layout_marginTop="@dimen/_32sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_32sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="卡号"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_pici"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="名称"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="满足金额"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_man"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="赠送金额"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_give"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="兑换积分"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_jifen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="数量"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="开始时间"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_starttime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:text="结束时间"
                            android:textColor="#888888"
                            android:textSize="@dimen/_32ssp" />

                        <TextView
                            android:id="@+id/tv_enttime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_65sdp"
                            android:text="75代100"
                            android:textColor="#333333"
                            android:textSize="@dimen/_32sdp" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/LineHorStyle" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_22sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:text="使用商家"
                    android:textSize="@dimen/_32ssp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bg_ract_white2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/functionbar_edit"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:text="编辑"
                android:textColor="#007DFF"
                android:textSize="@dimen/_20ssp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_setshop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/functionbar_edit"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:text="设置商家"
                android:textColor="#007DFF"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/functionbar_delete"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:text="删除"
                android:textColor="#007DFF"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
