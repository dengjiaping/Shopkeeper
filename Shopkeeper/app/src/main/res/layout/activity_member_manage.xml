<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context="com.admin.shopkeeper.ui.activity.activityOfBoss.returnanalysis.ReturnAnalysisActivity">

    <include layout="@layout/boss_common_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staff_manage_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawableRight="@mipmap/sort_a_z"
            android:gravity="center"
            android:paddingRight="@dimen/_32sdp"
            android:text="默认" />

        <TextView
            android:id="@+id/staff_manage_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawableRight="@mipmap/sort_default"
            android:gravity="center"
            android:paddingRight="@dimen/_32sdp"
            android:text="姓名" />

        <TextView
            android:id="@+id/staff_manage_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawableRight="@mipmap/sort_default"
            android:gravity="center"
            android:paddingRight="@dimen/_32sdp"
            android:text="状态" />

        <TextView
            android:id="@+id/staff_manage_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawableRight="@mipmap/choice_icon"
            android:gravity="center"
            android:paddingRight="@dimen/_32sdp"
            android:text="筛选" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_88sdp"
        android:layout_marginTop="@dimen/_39sdp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_32sdp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="序号"
            android:textColor="#888888"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="#888888"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="状态"
            android:textColor="#888888"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="电话"
            android:textColor="#888888"
            android:textSize="@dimen/_32ssp" />
    </LinearLayout>

    <View style="@style/LineHorStyle" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
