<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context="com.admin.shopkeeper.ui.activity.activityOfBoss.returnanalysis.ReturnAnalysisActivity">

    <include layout="@layout/boss_common_toolbar" />

    <View
        style="@style/LineHorStyle"
        android:layout_marginTop="@dimen/_30sdp" />

    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:text="挂账人名字" />

        <EditText
            android:id="@+id/edit_name"
            style="@style/SettingItemEditStyle"
            android:hint="请输入挂账人名字" />

    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:text="挂账人电话" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/SettingItemEditStyle"
            android:inputType="number"
            android:hint="请输入挂账人电话" />

    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:text="备注" />

        <EditText
            android:id="@+id/edit_remark"
            style="@style/SettingItemEditStyle"
            android:hint="请输入备注" />

    </LinearLayout>


    <View style="@style/LineHorStyle" />

</LinearLayout>
