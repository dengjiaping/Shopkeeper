<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/setting_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:background="@color/white"
            android:gravity="center"
            android:text="筛选条件"
            android:textColor="@color/black"
            android:textSize="@dimen/_36ssp" />

        <View style="@style/LineHorStyle" />

        <View
            style="@style/LineHorStyle"
            android:layout_marginTop="@dimen/_30sdp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            style="@style/SettingItemStyle">


            <TextView
                android:id="@+id/tv1"
                style="@style/SettingItemTextStyle"
                android:text="开始时间" />

            <TextView
                android:id="@+id/pop_starttime"
                style="@style/SettingItemEditStyle"
                android:inputType="date"
                android:gravity="center_vertical"
                android:hint="请选择开始时间" />

        </LinearLayout>

        <View style="@style/LineHorStyle" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            style="@style/SettingItemStyle">

            <TextView
                android:id="@+id/tv2"
                style="@style/SettingItemTextStyle"
                android:text="结束时间" />

            <TextView
                android:id="@+id/pop_endtime"
                style="@style/SettingItemEditStyle"
                android:inputType="date"
                android:gravity="center_vertical"
                android:hint="请选择结束时间" />

        </LinearLayout>

        <View style="@style/LineHorStyle" />

        <View
            style="@style/LineHorStyle"
            android:layout_marginTop="@dimen/_150sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="重置"
                android:textColor="#333333"
                android:textSize="@dimen/_34ssp" />

            <TextView
                android:id="@+id/pop_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#528EF1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/_34ssp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>