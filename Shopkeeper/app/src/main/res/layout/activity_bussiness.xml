<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context="com.admin.shopkeeper.ui.activity.activityOfBoss.returnanalysis.ReturnAnalysisActivity">

    <include layout="@layout/boss_common_toolbar" />


    <View
        style="@style/LineHorStyle"
        android:layout_marginTop="@dimen/_30sdp" />

    <!--桌位营业情况-->
    <LinearLayout
        android:id="@+id/bussiness_desk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@mipmap/bussiness_icon_desk" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_weight="1"
            android:text="桌位营业情况"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@mipmap/list_icon_arrow_right" />
    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <!--菜品销售情况-->
    <LinearLayout
        android:id="@+id/bussiness_food"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@mipmap/bussiness_icon_food" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_weight="1"
            android:text="菜品销售情况"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@mipmap/list_icon_arrow_right" />
    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <!--服务员开台情况-->
    <LinearLayout
        android:id="@+id/bussiness_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@mipmap/bussiness_icon_service" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_weight="1"
            android:text="服务员开台情况"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@mipmap/list_icon_arrow_right" />
    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <!--支付类型收款汇总-->
    <LinearLayout
        android:id="@+id/bussiness_payfor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@mipmap/bussiness_icon_payfor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_weight="1"
            android:text="支付类型收款汇总"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@mipmap/list_icon_arrow_right" />
    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <!--订单类型收款汇总-->
    <LinearLayout
        android:id="@+id/bussiness_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@mipmap/bussiness_icon_order" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_weight="1"
            android:text="订单类型收款汇总"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@mipmap/list_icon_arrow_right" />
    </LinearLayout>

    <View style="@style/LineHorStyle" />


</LinearLayout>
