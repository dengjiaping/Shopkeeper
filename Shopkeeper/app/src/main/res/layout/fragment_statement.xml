<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/state_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_static">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_159sdp"
                    android:text="今日营业金额(元)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_28ssp" />

                <TextView
                    android:id="@+id/state_totle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_230sdp"
                    android:layout_marginTop="@dimen/_204sdp"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_60ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_112sdp"
                    android:layout_gravity="bottom"
                    android:background="#22000000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/state_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_10sdp"
                        android:text="来客人数\n0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_24ssp" />

                    <TextView
                        android:id="@+id/state_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_10sdp"
                        android:text="客单价(元)\n0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_24ssp" />

                    <TextView
                        android:id="@+id/state_rate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_10sdp"
                        android:text="优惠金额\n0.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_24ssp" />

                </LinearLayout>

            </FrameLayout>

            <View
                style="@style/LineHorStyle"
                android:layout_marginTop="@dimen/_29sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_178sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/state_bussiness"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_item"
                    android:drawableTop="@mipmap/reporting_bussiness"
                    android:gravity="center"
                    android:padding="@dimen/_24sdp"
                    android:text="营业收款"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_28ssp" />

                <View style="@style/LineVerStyle" />

                <TextView
                    android:id="@+id/state_sale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_item"
                    android:drawableTop="@mipmap/reporting_sale"
                    android:gravity="center"
                    android:padding="@dimen/_24sdp"
                    android:text="销售排行"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_28ssp" />

                <View style="@style/LineVerStyle" />

                <TextView
                    android:id="@+id/state_return"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_item"
                    android:drawableTop="@mipmap/reporting_retreat"
                    android:gravity="center"
                    android:padding="@dimen/_24sdp"
                    android:text="退菜分析"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_28ssp" />

            </LinearLayout>

            <View style="@style/LineHorStyle" />

        </LinearLayout>

    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>