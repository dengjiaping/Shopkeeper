<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>

            <solid android:color="@color/colorPress" /><!-- 填充的颜色 -->
        </shape>
    </item>

    <item android:state_enabled="true">
        <ripple

            android:color="@color/colorPress" android:radius="@dimen/_44sdp"><!--//点击时波纹的颜色-->
            <item>
                <shape>

                    <stroke android:width="@dimen/_2sdp" android:color="@color/colorDialogBtnStroke" />
                    <solid android:color="@color/colorDialogBtn" /><!-- 填充的颜色 -->
                </shape>
            </item>

            <!--//未点击时控件的背景（可以是图片，可以是颜色，也可以是drawable里的xml背景（比如圆角））-->
        </ripple>
    </item>


</selector>
